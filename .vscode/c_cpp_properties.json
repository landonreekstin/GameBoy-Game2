{
    "configurations": [
        {
            "name": "GameBoy",
            "includePath": [
                "${workspaceFolder}/**",
                "${env:GBDK_HOME}/include/**"
            ],
            "defines": [
                "_DEBUG"
            ],
            // The compiler is now in the PATH, but being explicit is safer.
            "compilerPath": "${env:GBDK_HOME}/bin/lcc",
            "cStandard": "c99",
            "intelliSenseMode": "gcc-x64"
        }
    ],
    "version": 4
}